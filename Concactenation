#include <iostream>
#include <string>
using namespace std;

int main(void) {

string getlineFirst = " ";
string getlineSecond = " ";

cout << " You will enter one half of a sentence here, and the rest in a moment";   //user enters text
cin getlineFirst;
cout << "OK, let's finish the sentence here:";
cin getlineSecond;

cout << getlineFirst + "" + getlineSecond << endl;
cout << getlineSecond + "" + getlineFirst << endl;

return 0;

}
