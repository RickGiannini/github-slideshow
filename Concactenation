#include <iostream>
#include <string>
using namespace std;

int main(void) {

string getlineFirst, string getlineSecond, result;

cout << " You will enter one half of a sentence here, and the rest in a moment";   //user enters text
cin getlineFirst;
cout << "OK, let's finish the sentence here:";
cin getlineSecond;

result = getlineFirst + "" + getlineSecond;
result = getlineSecond + "" + getlineFirst;

return 0;

}
